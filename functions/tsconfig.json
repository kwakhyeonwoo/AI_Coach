{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                 // ← bundler 사용 요건 충족
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["**/*.ts", "**/*.tsx", "index.ts", "src"]
}
